<%= form_with(model: user, local: true) do |form| %>

  <div class="field">
    <%= form.label :dest %>
    <%= form.text_field :dest %>
  </div>

  <div class="field">
    <%= form.label :subject %>
    <%= form.text_field :subject %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.label :attachments %>
    <%= form.file_field :attachments %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
